@model List<MVCUserRoleManager.Areas.Identity.Data.PoolUser>

<h3>Users list</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>UserName</th>
            <th>Roles</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.RolesForUser)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>

                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>