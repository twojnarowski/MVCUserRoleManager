@model MVCUserRoleManager.Areas.Identity.DataDto.UserDto
@using MVCUserRoleManager.Areas.Identity.Data;
@{
    ViewData["Title"] = "Edit user";
}
<div class="row pt-4">
    <h1>Edit user</h1>
</div>

<h4>User</h4>
<hr />
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    function myFunction(element) {
        if (element.checked) {
            addRole(element.id)
        }
        else {
            removeRole(element.id)
        }
    }
    function addRole(role) {
        $.ajax({
            url: '@Url.Action("AddRole", "User")',
            dataType: 'html',
            method: 'GET',
            data: {
                roleId: role,
                userId: $('#Id').val(),
            },
            error: function(err) {
                console.log(err);
            }
        })
    }
        function removeRole(role) {
        $.ajax({
            url: '@Url.Action("RemoveRole", "User")',
            dataType: 'html',
            method: 'GET',
            data: {
                roleId: role,
                userId: $('#Id').val(),
            },
            error: function(err) {
                console.log(err);
            }
        })
    }
</script>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <ul class="list-unstyled">
                    @foreach (var role in ViewBag.Roles)
                    {
                        <li class="mt-2 mb-2">
                            <span class="icheck-primary d-inline">
                                <input id="@role.Id"
                                   onclick="myFunction(this)"
                                   type="checkbox"
                                   checked="@(((List<string>)ViewBag.UserRoles).Any(x => x == role.Name))" />
                                <label for="@role.Id">@role.Name</label>
                            </span>
                        </li>
                    }
                </ul>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row pt-4">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> &nbsp Save
                    </button>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-left"></i>&nbsp Return
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }