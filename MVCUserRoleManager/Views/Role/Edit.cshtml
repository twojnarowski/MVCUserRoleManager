@model MVCUserRoleManager.Areas.Identity.DataDto.RoleDto

@{
    ViewData["Title"] = "Edit role";
}
<div class="row pt-4">
    <h1>Edit role</h1>
</div>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Badge" class="control-label"></label>
                <input asp-for="Badge" class="form-control" />
                <span asp-validation-for="Badge" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row pt-4">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> &nbsp Save
                    </button>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-left"></i>&nbsp Return
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
